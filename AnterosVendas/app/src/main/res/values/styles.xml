<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- BarraBotoes -->
    <style name="BarraBotes">
        <item name="android:background">@color/colorPrimary</item>
    </style>


    <!-- Texto -->
    <style name="TextoGrande" parent="TextoMedio">
        <item name="android:textSize">18dip</item>
    </style>

    <style name="TextoMedio" parent="TextoPequeno">
        <item name="android:textSize">15dip</item>
    </style>

    <style name="TextoPequeno">
        <item name="android:textSize">10dip</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- Label -->
    <style name="Label">
        <item name="android:textSize">13dip</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">normal</item>
        <item name="android:shadowColor">#999999</item>
    </style>

    <!-- Spinner -->
    <style name="EstiloSpinner" parent="@android:style/Widget.Spinner">
        <item name="android:background">@drawable/sel_spinner</item>
    </style>

</resources>
