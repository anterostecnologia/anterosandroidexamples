<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Drop Shadow Stack -->
    <item>
        <shape>
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="1dp" />
            <gradient
                android:endColor="#10CCCCCC"
                android:startColor="#00CCCCCC" />
            <corners android:radius="30dp" />
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="1dp" />
            <gradient
                android:endColor="#20CCCCCC"
                android:startColor="#10CCCCCC" />
            <corners android:radius="30dp" />
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="0dp" />
            <gradient
                android:endColor="#40CCCCCC"
                android:startColor="#30CCCCCC" />
            <corners android:radius="30dp" />
        </shape>
    </item>


    <!-- Background -->
    <item>
        <shape>
            <solid android:color="@android:color/white" />
            <corners android:radius="1dp" />
        </shape>
    </item>
</layer-list>