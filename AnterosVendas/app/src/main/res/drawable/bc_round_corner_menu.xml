<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Drop Shadow Stack -->
    <item>
        <shape>
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
            <gradient
                android:endColor="#10CCCCCC"
                android:startColor="#00CCCCCC" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
            <gradient
                android:endColor="#20CCCCCC"
                android:startColor="#10CCCCCC" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <padding
                android:bottom="1dp"
                android:left="0dp"
                android:right="1dp"
                android:top="0dp" />
            <gradient
                android:endColor="#40CCCCCC"
                android:startColor="#30CCCCCC" />
            <corners android:radius="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:bottom="1dp"
                android:left="0dp"
                android:right="1dp"
                android:top="0dp" />
            <gradient
                android:endColor="#60CCCCCC"
                android:startColor="#50CCCCCC" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <padding
                android:bottom="2dp"
                android:left="1dp"
                android:right="2dp"
                android:top="1dp" />
            <gradient
                android:endColor="#80CCCCCC"
                android:startColor="#70CCCCCC" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <!-- Background -->
    <item>
        <shape>
            <solid android:color="#ECEFF1" /> <!--FFFFE6-->
            <corners android:radius="1dp" />
        </shape>
    </item>
</layer-list>